<!-- results page -->


<style>

.btn-outline {
    opacity: 0.7;
}

.btn {
    opacity: 0.7;
}

.result {
text-decoration-color: white;
}

* {
  font-size: 20px;
}

body {
  margin: 0;
  background: #000;
  font-size: 20px;
}

article {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

h1 {
  position: absolute;
  top: 30%;
  width: 100%;
  font-size: 3.6rem;
  letter-spacing: 3px;
  color: #fff;
  font-family: Oswald, sans-serif;
  text-shadow: 1px 1px 1px #16a085, 1px 1px 4px #2980b9;
  text-align: center;
}

</style>

<!-- background video -->
<div style="position: fixed; z-index: -99; width: 100%; height: 100%">
<iframe frameborder="0" height="100%" width="100%" src="////www.youtube.com/embed/ervj5iFXtSQ?rel=0&amp;autoplay=1&amp;controls=0&amp;loop=1&amp;rel=0&amp;showinfo=0&amp;autohide=1&amp;wmode=transparent&amp;hd=1" frameborder="0" allowfullscreen></iframe>
</div>



<% include partials/header.ejs%>


<a href="/favorites" class="favorites"><button class="btn btn-default btn-outline">Favorites</button></a>
<a href="/homepage" class="homepage"><button class="btn btn-default btn-outline">Go Home</button></a>
<h2 class="head2">Results</h2>

<div class="span8" style="width: 1000px; height: 500px;"
    data-vide-bg="mp4: path/to/video1, webm: path/to/video2, ogv: path/to/video3, poster: path/to/poster" data-vide-options="posterType: jpg, loop: false, muted: false, position: 0% 0%">
<div class="results text-left">
  <% businesses.forEach(function(business){ %>
    <p>
    	<%= business.name %>
    </p>

    <p>
      <img src="<%= business.image_url%>" class="img-circle">
    </p>

    <p> Rating:
     <%= business.rating %>
    </p>

    <p>
     <%= business.location.address %>
    </p>

    <p>
      <%= business.phone %>
    </p>

    <p>
      <%= business.snippet_text %>
    </p>

<form action="/favorites" method="post">
  <input type="hidden" name="business" value="<%= business.name %>">
    <p>
      <input type="hidden" name="id" value="<%= business.id %>">
      <input type="hidden" name="id" value="<%= business.location.display_address %>">
    </p>

<input type="submit" value="save" class="btn btn-default btn-outline">

</form>
 <% }) %>
 </div>
</div>






